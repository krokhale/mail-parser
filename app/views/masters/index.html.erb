<h1>Listing Primary Categories</h1>

<table>
  <tr>
    <th>Name</th>
  </tr>

<% @masters.each do |master| %>
  <tr>
    <td><%=h master.name %></td>
    <td><%= link_to 'Show', master %></td>
    <td><%= link_to 'Edit', edit_master_path(master) %></td>
    <td><%= link_to 'Destroy', master, :confirm => 'Are you sure?', :method => :delete %></td>
    <td><%= link_to 'Add Words', :controller => "categories", :master_id => master.id %></td>
  </tr>
<% end %>
</table>

